@model GCook.Models.Receita
@{
    ViewData["Title"] = "Receita";
}

<div class="container text-white">
    <div class="row">
        <div class="col text-center">
            <h1 class="fs-1">@Model.Nome</h1>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-lg-4 p-0 rounded-4">
            <img class="w-100 rounded-4" src="@Model.Foto" alt="@Model.Nome">
            <div class="d-flex justify-content-between mt-3 fs-5">
                <span>Porções: @Model.Rendimento</span>
                <span>Tempo Preparo: @Model.TempoPreparo</span>
            </div>
            <div class="d-flex justify-content-center mt-2 rating-stars">
                <ul id='stars'>
                    <li class='star' title='Poor' data-value='1'>
                        <i class="bi bi-star-fill fs-1"></i>
                    </li>
                    <li class='star' title='Fair' data-value='2'>
                        <i class="bi bi-star-fill fs-1"></i>
                    </li>
                    <li class='star' title='Good' data-value='3'>
                        <i class="bi bi-star-fill fs-1"></i>
                    </li>
                    <li class='star' title='Excellent' data-value='4'>
                        <i class="bi bi-star-fill fs-1"></i>
                    </li>
                    <li class='star' title='WOW!!!' data-value='5'>
                        <i class="bi bi-star-fill fs-1"></i>
                    </li>
                </ul>
            </div>
            <label class="mt-2 fs-5">Postado por: GalloJunior</label>
        </div>
        <div class="col-lg-8 fs-5">
            <p class="mb-3"><strong>Descrição:</strong> @Model.Descricao</p>
            <p class="fs-4 fw-bold">Ingredientes</p>
            <div class="row my-2">
                @foreach (var ingrediente in Model.Ingredientes)
                {
                    <div class="ms-5 form-check" onclick="slash(@ingrediente.IngredienteId)">
                        <input class="form-check-input" type="checkbox" value="" id="check-@ingrediente.IngredienteId">
                        <label class="form-check-label" for="check-@ingrediente.IngredienteId">
                            @ingrediente.Quantidade @ingrediente.Ingrediente.Nome
                        </label>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
